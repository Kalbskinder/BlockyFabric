<!-- Theme -->
<% if (user.theme === 'default') { %>
    <link rel="stylesheet" href="/styles/themes/default.css">
<% } else if (user.theme === 'default-dark') { %>
    <link rel="stylesheet" href="/styles/themes/default-dark.css">
<% } else if (user.theme === 'green-light') { %>
    <link rel="stylesheet" href="/styles/themes/green-light.css">
<% } else if (user.theme === 'green-dark') { %>
    <link rel="stylesheet" href="/styles/themes/green-dark.css">
<% } %>