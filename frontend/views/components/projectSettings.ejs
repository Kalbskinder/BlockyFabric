<!-- Modal for editing mod settings -->
    <div class="modal fade" tabindex="-1" id="modSettings">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Mod Settings</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <form>
                    <!-- Mod Name -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-4">
                                <label for="modName" class="form-label">Name:</label>
                            </div>
                            <div class="col-8">
                                <input type="text" class="form-control" id="modName" value="untitled">
                            </div>
                        </div>

                        <!-- Mod Description -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-4">
                                <label for="modDescription" class="form-label">Description:</label>
                            </div>
                            <div class="col-8">
                                <input type="text" class="form-control" id="modDescription">
                            </div>
                        </div>

                        <!-- Mod Banner (File Upload) -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-4">
                                <label for="file-input" class="form-label">Banner:</label>
                            </div>
                            <div class="col-8">
                                <span id="file-name" class="mb-3"></span>  <!-- File name display  -->
                                <span id="filesize-error" class="error-message hidden mb-3"></span> 
                                <label for="file-input" class="btn btn-primary w-100"><img src="/images/icons/cloud-upload.svg" alt="Upload" class="icon icon-light mr"> Choose File</label>
                                <input type="file" id="file-input" name="profileImage" accept="image/*" hidden>
                            </div>
                        </div>

                        <!-- Project Visibility -->
                        <div class="row mb-3 align-items-center">
                            <div class="col-4">
                                <label for="modVisibility" class="form-label">Visibility</label>
                            </div>
                            <div class="col-8">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio-public" value="option1">
                                    <label class="form-check-label" for="radio-public">Public</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" name="inlineRadioOptions" id="radio-private" value="option2" checked>
                                    <label class="form-check-label" for="radio-private">Private</label>
                                </div>
                                
                            </div>
                            <div class="col-8">
                                
                            </div>
                        </div>

                    </form>
                </div>
        
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary" onclick="saveModSettings()">Save Changes</button>
                </div>
            </div>
        </div>
    </div>