    </div>

    <script>
        function showContent(section) {
            let sections = ["intro", "installation", "blockly", "custom_blocks", "backend"];
            sections.forEach(id => {
                document.getElementById(id).style.display = (id === section) ? "block" : "none";
            });
        }
    </script>

</body>
</html>
