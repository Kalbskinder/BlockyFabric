<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BlockyFabric - Login</title>
    <%- include('../components/imports') %>
    <style>
        body {
            background-color: #f8f9fa;
        }
        .form-container {
            max-width: 400px;
            margin: auto;
            margin-top: 50px;
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }
        .hidden {
            display: none;
        }
        .error-message {
            color: red;
            font-size: 14px;
            margin-top: 5px;
            display: none;
        }
    </style>
    <link rel="stylesheet" href="/styles/style.css">
    <%- include('../components/themes') %> <!-- Theme -->
</head>
<body>
<%- include('../components/navbar') %>  <!-- Navbar -->
<div class="container">
    <div class="form-container">
        <h3 class="text-center text-primary text-bold">BlockyFabric</h3>
        
        <!-- Login Form -->
        <form id="login-form">
            <h4 class="text-center">Login</h4>
            <div class="mb-3">
                <label class="form-label">Username or E-Mail</label>
                <input type="text" id="login-email" class="form-control" required placeholder="Username or E-Mail">
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" id="login-password" class="form-control" required placeholder="Password">
            </div>
            <div id="login-error" class="error-message hidden">Invalid email or password.</div>
            <button type="submit" class="btn btn-primary w-100">Login</button>
            <p class="mt-3 text-center">
                Don't have an account? <a href="#" id="show-register">Sign up</a>
            </p>
        </form>

        <!-- Registration Form -->
        <form id="register-form" class="hidden">
            <h4 class="text-center">Sign up</h4>
            <div class="mb-3">
                <label class="form-label">Username</label>
                <input type="text" id="register-username" class="form-control" required placeholder="Username">
                <div id="username-error" class="error-message hidden">Username can't be longer than 10 characters</div>
            </div>
            <div class="mb-3">
                <label class="form-label">E-Mail</label>
                <input type="email" id="register-email" class="form-control" required placeholder="E-mail">
                <div id="email-error" class="error-message hidden">An account with this Username or E-Mail already exists</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Password</label>
                <input type="password" id="register-password" class="form-control" required placeholder="Password">
                <div id="password-error" class="error-message hidden">Password must be at least 8 characters long.</div>
            </div>
            <div class="mb-3">
                <label class="form-label">Confirm Password</label>
                <input type="password" id="register-confirm-password" class="form-control" required placeholder="Confirm Password">
                <div id="confirm-password-error" class="error-message hidden">Passwords do not match.</div>
            </div>
            <div id="register-error" class="error-message hidden">Registration failed.</div>
            <button type="submit" class="btn btn-primary w-100">Register</button>
            <p class="mt-3 text-center">
                Already have an account? <a href="#" id="show-login">Login</a>
            </p>
        </form>
    </div>
</div>

<script src="./src/login.js"></script>


</body>
</html>
